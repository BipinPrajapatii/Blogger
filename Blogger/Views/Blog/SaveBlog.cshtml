@model BlogSaveModel
@{
    bool isEditAction = ViewData["Title"] == "Edit Blog";
}

<form method="post" asp-action=@(isEditAction ? "Edit" : "Create" ) class="row g-3">
    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" placeholder="Text"></textarea>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section  Scripts {
    <script src="~/tinymce/tinymce.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
            selector: 'textarea#Content',
            plugins: 'link image code', // include the plugins you want
            toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright | bullist numlist outdent indent | link image code', // customize the toolbar
            menubar: false, // Disable the menubar
        });
    </script>
}